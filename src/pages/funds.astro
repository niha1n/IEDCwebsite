<script is:inline>
  document.querySelectorAll(".read-button").forEach(function(button) {
      button.addEventListener("click", function() {
          this.classList.toggle("active");
  
          
  
          if (document.querySelectorAll(".read-button.active").length > 0) {
              document.querySelectorAll(".toggle_text").forEach(function(text) {
                  text.textContent = "Read Less";
                  document.getElementById('arrow-svg').style.transform = `rotate(${180}deg)`;
                  document.querySelectorAll(".more").forEach(function(div) {
              div.classList.toggle("visible");
              div.classList.remove("hidden")
          });
              });
          } else {
              document.querySelectorAll(".toggle_text").forEach(function(text) {
                  text.textContent = "Read More";
                  document.getElementById('arrow-svg').style.transform = `rotate(${0}deg)`;
                  document.querySelectorAll(".more").forEach(function(div) {
              div.classList.toggle("hidden");
              div.classList.remove("visible")
          });
              });
          }
      });
  });
  
  </script>

