---
interface Props {
  title:string;
	href: string;
}

const  {title, href}  = Astro.props;
---

<a href="/projects" class=" m-3 md:m-0 " >
<div class="card  ] mx-auto" >
    <p class="card__content">{title} <br><br></p>

    <div class="card__arrow">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" height="15" width="15">
            <path fill="#fff" d="M13.4697 17.9697C13.1768 18.2626 13.1768 18.7374 13.4697 19.0303C13.7626 19.3232 14.2374 19.3232 14.5303 19.0303L20.3232 13.2374C21.0066 12.554 21.0066 11.446 20.3232 10.7626L14.5303 4.96967C14.2374 4.67678 13.7626 4.67678 13.4697 4.96967C13.1768 5.26256 13.1768 5.73744 13.4697 6.03033L18.6893 11.25H4C3.58579 11.25 3.25 11.5858 3.25 12C3.25 12.4142 3.58579 12.75 4 12.75H18.6893L13.4697 17.9697Z"></path>
        </svg>
    </div>
</div>
</a>

<style>
/* this card is inspired form this - https://georgefrancis.dev/ */

.card {
  --border-radius: 0.75rem;
  --primary-color: #004C9F;
  --secondary-color: #172177;
  padding: 1rem;
  cursor: pointer;
  border-radius: var(--border-radius);
  background: #fff;
  position: relative;
  box-shadow:
  0.6px 0.5px 0.8px rgba(0, 0, 0, 0.001),
  1.3px 1.3px 1.9px rgba(0, 0, 0, 0.004),
  2.5px 2.4px 3.6px rgba(0, 0, 0, 0.01),
  4.5px 4.2px 6.3px rgba(0, 0, 0, 0.018),
  8.4px 7.9px 10.9px rgba(0, 0, 0, 0.03),
  20px 19px 25px rgba(0, 0, 0, 0.07)
;
}

.card > * + * {
  margin-top: 1.1em;
}

.card .card__content {
  color: var(--secondary-color);
  font-size: 0.86rem;
}

.card .card__title {
  padding: 0;
  font-size: 1.3rem;
  font-weight: bold;
}

.card .card__date {
  color: #6e6b80;
  font-size: 0.8rem;
}

.card .card__arrow {
  position: absolute;
  background: var(--primary-color);
  padding: 0.4rem;
  border-top-left-radius: var(--border-radius);
  border-bottom-right-radius: var(--border-radius);
  bottom: 0;
  right: 0;
  transition: 0.2s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card svg {
  transition: 0.2s;
}

/* hover */
.card:hover .card__title {
  color: var(--primary-color);
  text-decoration: underline;
}

.card:hover .card__arrow {
  background: #172177;
}

.card:hover .card__arrow svg {
  transform: translateX(3px);
}
.card:hover{

transform: translateY(-1px);

}


</style>